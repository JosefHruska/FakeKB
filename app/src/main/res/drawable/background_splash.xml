<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:opacity="opaque">

    <item android:drawable="@color/white" />

    <item android:bottom="46dp">
        <bitmap
            android:gravity="center"
            android:src="@drawable/ic_splash_app"/>
    </item>

    <!-- splash screen takes padding from the bottom of the screen including software buttons -->
    <item android:bottom="99dp">
        <bitmap
            android:gravity="bottom|center"
            android:src="@drawable/ic_splash_stepup" />
    </item>

</layer-list>